<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--自定义底部弹出窗-->
    <style name="MyDialog" parent="android:Theme.Holo.Dialog">
        <!--是否有边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否悬浮在Activity上-->
        <item name="android:windowIsFloating">true</item>
        <!--标题-->
        <item name="android:windowNoTitle">true</item>
        <!--阴影-->
        <item name="android:windowIsTranslucent">true</item>
        <!--背景透明-->
        <item name="android:windowBackground">@color/dialog</item>
        <item name="android:scrollHorizontally">true</item>
        <!--加一些弹出和退出动画-->
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/tabTextSize</item>
        <item name="android:fontFamily">sans-serif-monospace</item>
    </style>

</resources>
