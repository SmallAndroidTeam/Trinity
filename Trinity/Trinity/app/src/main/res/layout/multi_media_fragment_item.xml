<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="of.media.bq.activity.MainActivity"
    android:orientation="vertical"
    >
    <!--// android:background="@color/colorPrimaryDark"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/leftMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/leftOnlinebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="140px"
                android:text="@string/online"
                android:visibility="invisible"
                android:textColor="#ffffff"
                android:textSize="36px" />

            <TextView
                android:id="@+id/leftLocalbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="62px"
                android:text="@string/local"
                android:textColor="#ffffff"
                android:textSize="36px" />
        </LinearLayout>

        <ImageView
            android:id="@+id/leftMenuLiner"
            android:layout_width="134px"
            android:layout_height="match_parent"
            android:layout_marginBottom="85px"
            android:layout_marginLeft="6px"
            android:layout_marginTop="35px"
            android:layout_toRightOf="@+id/leftMenu"
            android:scaleType="fitXY"
            android:src="@drawable/bg_online" />

        <FrameLayout
            android:id="@+id/fl_multi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</LinearLayout>