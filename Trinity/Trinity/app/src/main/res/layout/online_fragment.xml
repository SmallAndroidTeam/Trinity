<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/onlineFrameLayout"
        android:layout_marginTop="100px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/onlineMusicTextView"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:paddingLeft="50px"
                android:paddingRight="50px"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="音乐"
                android:textSize="40px"
                android:textColor="@color/textSelect"/>
            <TextView
                android:id="@+id/onlineVideoTextView"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:paddingLeft="50px"
                android:paddingRight="50px"
                android:layout_marginLeft="60px"
                android:layout_marginRight="60px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频"
                android:textSize="40px"
                android:textColor="@color/textNoSelect"/>
            <TextView
                android:id="@+id/onlineGalleryTextView"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:paddingLeft="50px"
                android:paddingRight="50px"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图片"
                android:textSize="40px"
                android:textColor="@color/textNoSelect"/>
        </LinearLayout>
        <TableLayout
            android:id="@+id/onlineSlideLine"
            android:background="@drawable/split_line_fame"
            android:layout_width="wrap_content"
            android:layout_height="5px"/>
    </LinearLayout>

</RelativeLayout>