<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="522">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="389"
        android:layout_gravity="center_horizontal"
        android:id="@+id/contact_info_pad"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/contact_info_avatar"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:scaleType="fitCenter"
            />

        <TextView
            android:id="@+id/contact_info_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textSize="@dimen/btBigTextSize"
            android:textColor="@color/bt_text_main"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/contact_info_number"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/btMiddleTextSize"
            android:singleLine="true"
            android:textColor="@color/bt_text_normal"
            />

    </LinearLayout>

    <!--  Tips field -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="389"
        android:textSize="@dimen/btBigTextSize"
        android:textColor="@color/bt_text_main"
        android:gravity="center"
        android:id="@+id/contact_info_tips"
        android:visibility="gone">
    </TextView>

    <ImageButton
        android:id="@+id/contact_dial_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="78"
        android:layout_gravity="center"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/bt_call_or_answer"
        android:scaleType="fitCenter"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="65"
        android:visibility="invisible"
        />

</LinearLayout>