<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/galleryImageview"
        android:layout_width="wrap_content"
        android:layout_height="300px"
        android:src="@drawable/p1"
        android:layout_centerInParent="true"

        />

    <ImageView
        android:id="@+id/prevImageView"
        android:layout_centerVertical="true"
        android:layout_marginStart="10px"
        android:padding="5px"
        android:layout_width="70px"
        android:layout_height="70px"
        android:background="@drawable/gallery_dailog_round_icon"
        android:src="@drawable/prev_image"/>
    <ImageView
        android:id="@+id/nextImageView"
        android:layout_centerVertical="true"
        android:padding="5px"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10px"
        android:layout_width="70px"
        android:layout_height="70px"
        android:src="@drawable/next_image"
        android:background="@drawable/gallery_dailog_round_icon"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:padding="5px"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/enlarge"
            android:layout_width="60px"
            android:layout_height="60px"
            android:src="@drawable/enlarge"/>
        <ImageView
            android:id="@+id/smaller"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:src="@drawable/smaller"/>
        <ImageView
            android:id="@+id/rotation"
            android:layout_width="60px"
            android:layout_height="60px"
            android:src="@drawable/rotation"/>
    </LinearLayout>

</RelativeLayout>