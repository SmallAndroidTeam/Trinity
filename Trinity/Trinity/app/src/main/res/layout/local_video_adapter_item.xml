<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <RelativeLayout
        android:id="@+id/videRelativeLayout"
        android:layout_width="390px"
        android:layout_height="220px"
        android:descendantFocusability="blocksDescendants"
        android:background="@drawable/bg_video_choose"
        >
        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/videoThumbnail"
            android:layout_width="354px"
            android:layout_height="186px"
            android:scaleType="fitXY"
            android:focusable="false"
            android:src="@drawable/vp2"/>
        <TextView
            android:id="@+id/videoNameTextView"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/textSelect"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="30px"
            />
        <ImageView
            android:id="@+id/videoPauseImageView"
            android:layout_below="@+id/videoNameTextView"
            android:layout_marginTop="8px"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_width="48px"
            android:layout_height="48px"
            android:focusable="false"
            android:src="@drawable/video_pause_imageview"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>