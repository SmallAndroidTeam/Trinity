<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<item>
    <rotate
       android:fromDegrees="45"
        android:pivotX="100%"
        android:pivotY="100%"
        >
        <shape android:shape="rectangle">
            <stroke android:color="@color/splitLine"
                android:width="5px"/>
            <size android:width="50px"
                android:height="60px"
                ></size>

        </shape>
    </rotate>
</item>

</layer-list>